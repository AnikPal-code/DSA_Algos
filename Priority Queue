#include<bits/stdc++.h>
using namespace std;

int main() {
	// MAX HEAP => Decending Order
	priority_queue<int> p;
	p.push(10);
	p.push(20);
	p.push(11);
	p.push(18);
	p.push(15);

	cout << p.top() << endl;

	p.pop();
	cout << p.top() << endl;

	cout << p.size() << endl;

	while(!p.empty()) {
		cout << p.top() << " ";
		p.pop();
	}

	// MIN HEAP => Ascending Order
	priority_queue<int, vector<int>, greater<int>> p;
	p.push(10);
	p.push(20);
	p.push(11);
	p.push(18);
	p.push(15);

	cout << p.top() << endl;

	p.pop();
	cout << p.top() << endl;

	cout << p.size() << endl;

	while(!p.empty()) {
		cout << p.top() << " ";
		p.pop();
	}
}
