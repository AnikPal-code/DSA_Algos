#include<iostream>
#include<vector>
using namespace std;

int binarySearch(int n, vector<int>& arr, int target) {
    int start = 0, end = n-1;
    while(start <= end) {
        int mid = start + (end-start)/2;

        if (arr[mid] == target) {
            return mid;
        }
        if (arr[mid] < target) {
            start = mid+1;
        }
        else {
            end = mid-1;
        }
        mid = start + (end-start)/2;
    }
}

int main() {
    int n;
    cout << "Size of array: ";
    cin >> n;
    vector<int> arr(n);
    cout << "Elements: ";
    for(int i = 0; i < n; i++) {
        cin >> arr[i];
    }
    int x;
    cout << "Enter the element to be searched? ";
    cin >> x;
    int finalAns = binarySearch(n, arr, x);
    cout << finalAns << endl;
}
